#!/bin/bash

if [ -z "$1" ]
then
  echo "Usage: golo <some golo module with a main function>"
  echo "(e.g., golo my.Module)"
  exit 1
fi

if [ -z ${GOLO_CLASSPATH} ]
then
  GOLO_CLASSPATH='.'
else
  GOLO_CLASSPATH='.':${GOLO_CLASSPATH}
fi

cd `dirname $0`/..
for jar in lib/*.jar
do
  GOLO_CLASSPATH=${GOLO_CLASSPATH}:${jar}
done

java ${JVM_FLAGS} -classpath ${GOLO_CLASSPATH} $@

